#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;


int main()
{
    int y,n;
    do{
    srand( time ( NULL ) );
    cout <<"Wprowadz twoj traf: "<<endl;
    cin >> y;
    int x = (rand()%10+1);
    if(y<=10)
        n=0;
        else
        n=1;
        if(y<=10)
        {
    if(x==y)
        {
        cout<<"Wylosowana liczba: " <<x<<endl;
        cout<<"Twoja liczba: "<<y<<endl;
        cout<<"wow, trafiles"<<endl;
        }
    else
        {
        cout<<"Probuj dalej"<<endl;
        cout<<"Wylosowana liczba: " <<x<<endl;
        cout<<"Twoja liczba: " <<y<<endl;
        }
        }
        else if(y>10)
        {
        cout<<"Wybrales liczbe spoza zakresu \n";
        }
        }
        while(n==1);

    return 0;
}
